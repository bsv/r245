\usepackage{fancyhdr}

\def\theme#1{\gdef\@theme{#1}}
\def\authortwo#1{\gdef\@authortwo{#1}}

\def\maketitle{
	\newpage
	\let\footnotesize\small
	\let\footnoterule\relax
	\thispagestyle{fancy}
	\renewcommand{\headheight}{27.2pt}
	\fancyhf{}
	\fancyfoot[C]{\bfseries Санкт-Петербург \number\year}
%	\fancyfoot[C]{\bfseries\today}
	\renewcommand{\headrulewidth}{0mm}
	\renewcommand{\footrulewidth}{0mm}

	\null\vfil

	\begin{center}
		\begin{Large}
			{\bfseries {\@title} \par}
		\end{Large}
		\bigskip
		\begin{LARGE}
			{\bfseries {\@theme} \par}	% Название
		\end{LARGE}
	\end{center}

	\vspace{7cm}

	\begin{flushright}
		\begin{tabular}{rl|}
			{\emph{Авторы:}} & {\bfseries {\@author}} \\
							 & {\bfseries {\@authortwo}} \\
		\end{tabular}
	\end{flushright}

	\null\vfil
	\setcounter{page}{0}
	\setcounter{footnote}{0}
	\pagebreak
}	% End of \def\maketitle

\def\ps@plain{
	\pagestyle{fancy}
	\fancyhf{}
	\renewcommand{\headrulewidth}{0mm}
	\renewcommand{\footrulewidth}{0.2mm}
	\renewcommand{\headheight}{27.2pt}
%	\fancyhead[L]{\small\thesection.\thesubsection}
	\fancyfoot[C]{\thepage}
}
